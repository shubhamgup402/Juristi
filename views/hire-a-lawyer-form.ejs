    <main class="main">

        <!-- Starter Section Section -->
        <section id="starter-section" class="starter-section section">

            <div class="hire-lawyer-container">
                <h2>Hire a Lawyer</h2>
                <form action="https://formspree.io/f/xanwlwwz"
                method="POST">
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required>
                    </div>
                    <div class="mb-3">
                        <label for="caseDescription" class="form-label">Case Description</label>
                        <textarea class="form-control" id="caseDescription" name="caseDescription" rows="4" placeholder="Briefly describe your case or legal issue" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Preferred Contact Method</label><br>
                        <div class="form-check form-check-inline">
                            <input type="radio" id="contactEmail" name="contactMethod" value="Email" class="form-check-input" required>
                            <label for="contactEmail" class="form-check-label">Email</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" id="contactPhone" name="contactMethod" value="Phone" class="form-check-input" required>
                            <label for="contactPhone" class="form-check-label">Phone</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="budget" class="form-label">Budget</label>
                        <input type="number" class="form-control" id="budget" name="budget" placeholder="Enter your budget">
                    </div>
                    <div class="mb-3">
                        <label for="urgency" class="form-label">How soon do you need assistance?</label>
                        <select class="form-control" id="urgency" name="urgency" required>
                            <option value="Immediately">Immediately</option>
                            <option value="Within a week">Within a week</option>
                            <option value="Within a month">Within a month</option>
                            <option value="Flexible">Flexible</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Hire Now</button>
                </form>
            </div>

